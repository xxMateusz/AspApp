@{
}
@model Post

@{
    ViewData["Title"] = "Utworzenie nowego posta";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Content" class="form-label">Zawartość posta</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Author" class="form-label">Autor</label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PublicationDate" class="form-label">Data publikacji</label>
        <input asp-for="PublicationDate" type="date" class="form-control" />
    </div>

  

    <div class="mb-3">
        <label asp-for="Tags" class="form-label">Tagi</label>
        <input asp-for="Tags" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Komentarz</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Utwórz</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
