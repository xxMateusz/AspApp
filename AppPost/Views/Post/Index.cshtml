@{
}
@model List<AppPost.Models.Post>



<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Zawartość</th>
            <th>Autor</th>
            <th>Data Publikacji</th>
            <th>Status</th>
            <th>Tagi</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Content</td>
                <td>@post.Author</td>
                <td>@post.PublicationDate.ToString("yyyy-MM-dd")</td>
    
                <td>@post.Tags</td>
                <td>
                    <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-info">Szczegóły</a>
                    <a asp-action="Update" asp-route-id="@post.Id" class="btn btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Utwórz nowy post</a>
</p>
